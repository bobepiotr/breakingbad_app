<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bb_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CharacterDetails"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--549dp-->
            <ImageView
                android:id="@+id/ch_photo_img"
                android:layout_width="match_parent"
                android:layout_height="549dp"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="TODO" />

            <!-- 51dp x2 -->
            <TextView
                android:id="@+id/ch_name_desc"
                android:layout_width="match_parent"
                android:layout_height="102dp"
                android:fontFamily="serif"
                android:textColor="@color/white"
                android:text="Name Surname"
                android:gravity="center_horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                app:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="24sp"
                app:autoSizeMaxTextSize="45sp" />
        </LinearLayout>

        <!-- 549dp + 5dp-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="549dp"
            android:layout_marginTop="5dp">

            <!--status-->
            <TableRow
                android:gravity="center" >
                <ImageView
                    android:id="@+id/ch_status_img"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/ch_status_unknown_dead_icon" />
            </TableRow>

            <!--nickname-->
            <TableRow
                android:paddingStart="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/ch_nickname_img"
                    app:srcCompat="@drawable/ch_nickname_icon" />

                <TextView
                    android:id="@+id/ch_nickname_desc"
                    android:textSize="30sp"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:text="Nickname"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="30sp"
                    app:autoSizeMaxTextSize="38sp"
                    android:layout_marginStart="30dp" />
            </TableRow>

            <!--B-day-->
            <TableRow
                android:paddingStart="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/ch_born_img"
                    app:srcCompat="@drawable/ch_born_icon" />

                <TextView
                    android:id="@+id/ch_born_desc"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="20-01-2008"
                    android:layout_marginStart="30dp"/>
            </TableRow>

            <!--portrayed-->
            <TableRow
                android:paddingStart="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >
                <ImageView
                    android:id="@+id/ch_portrayed_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ch_portrayed_icon" />

                <TextView
                    android:id="@+id/ch_portrayed_desc"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="Portrayed"
                    android:layout_marginStart="30dp"/>
            </TableRow>

            <!--occupation-->
            <TableRow
                android:paddingLeft="40dp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp" >
                <ImageView
                    android:id="@+id/ch_occupation_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ch_occupation_icon" />

                <TextView
                    android:id="@+id/ch_occupation_desc"
                    android:layout_width="240dp"
                    android:layout_height="70dp"
                    android:textSize="30sp"
                    android:fontFamily="serif"
                    android:textColor="@color/white"
                    android:text="Occupation"
                    android:paddingTop="10dp"
                    android:layout_marginStart="30dp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="12sp"
                    app:autoSizeMaxTextSize="30sp"/>
            </TableRow>

            <!--appearance-->
            <TableRow>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</ScrollView>